{
  "name": "suid",
  "private": true,
  "workspaces": [
    "scripts",
    "packages/compiler",
    "packages/types",
    "packages/utils",
    "packages/css",
    "packages/system",
    "packages/base",
    "packages/material",
    "packages/icons-material",
    "packages/site"
  ],
  "scripts": {
    "build": "npm run gen:icons-material-typing && npm run build:ts && npm run build:site && npm run gen:res",
    "build:site": "npm run build -w packages/site",
    "build:ts": "tsc --build tsconfig.build.json",
    "changeset": "changeset",
    "check": "npm run format:check && npm run lint",
    "clean": "tsc --build tsconfig.build.json --clean",
    "format": "prettier --ignore-path .gitignore -w .",
    "format:check": "prettier --ignore-path .gitignore -c .",
    "gen:icons-material-typing": "npm run scripts gen-icons-material-typing",
    "gen:res": "npm run scripts gen-res",
    "lint": "eslint --ignore-path .gitignore .",
    "prepare": "husky install",
    "purge": "ts-node ./scripts/purge",
    "release": "changeset publish",
    "scripts": "ts-node --project ./scripts/tsconfig.json -r tsconfig-paths/register scripts",
    "start": "npm run watch -w packages/site",
    "test": "jest",
    "update": "ncu",
    "watch": "tsc --build tsconfig.build.json -w"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.3",
    "@changesets/cli": "^2.21.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-solid": "^0.4.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "npm-check-updates": "^12.5.4",
    "prettier": "^2.6.0",
    "prettier-plugin-packagejson": "^2.2.16",
    "prettier-plugin-sort-json": "^0.0.2",
    "solid-jest": "^0.2.0",
    "solid-testing-library": "^0.3.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
